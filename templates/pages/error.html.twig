{% extends 'layouts/lite.html.twig' %}
    
{% block head_title %}{{ "error_page.#{status_code}.title"|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card">

            <div class="card-body p-4">

                <div class="error-ghost text-center">
                    <img src="{{ error_image }}" width="200" alt="error-image"/>
                </div>

                <div class="text-center">
                    <h3 class="mt-4 text-uppercase fw-bold">{{ "error_page.#{status_code}.title"|trans }}</h3>

                    <p class="text-muted mb-0 mt-3" style="line-height: 20px;">{{ "error_page.#{status_code}.description"|trans|raw }}</p>

                    <a class="btn btn-primary mt-4" href="/"><i class="mdi mdi-reply me-1"></i>{{ "error_page.btn_home"|trans }}</a>
                    
                    <p class="text-muted mb-0 mt-5">{{ "error_page.support"|trans }}: <a href="javascript: void(0);">support@adoxa.ru</a></p>
                </div>

            </div> <!-- end card-body -->
        </div>
        <!-- end card -->

    </div> <!-- end col -->
</div>
<!-- end row -->
{% endblock %}
