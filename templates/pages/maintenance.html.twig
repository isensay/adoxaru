{# Устанавливаем локаль для переводов #}
{% set currentLocale = locale|default(app.request.locale) %}

{# Page Content #}
{% extends 'layouts/lite.html.twig' %}
    
{% block head_title %}{% trans %}error_page.503.head_title{% endtrans %}{% endblock %}

{% block body %}
<div class="text-center">
    <img src="/source/base/images/animat-diamond-color.gif" alt="" height="160">
    <h3 class="mt-1"> {% trans %}error_page.503.page_title{% endtrans %} </h3>
    <p class="text-muted"> {% trans %}error_page.503.page_text{% endtrans %} </p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="text-center mt-3 px-1">
                <div class="avatar-md rounded-circle bg-soft-primary mx-auto">
                    <i class="fe-target font-22 avatar-title text-primary"></i>
                </div>
                <h5 class="font-16 mt-3"> {% trans %}error_page.503.descriptions.left.title{% endtrans %} </h5>
                <p class="text-muted"> {% trans %}error_page.503.descriptions.left.text{% endtrans %} </p>
            </div>
        </div> <!-- end col-->
        <div class="col-md-4">
            <div class="text-center mt-3 px-1">
                <div class="avatar-md rounded-circle bg-soft-primary mx-auto">
                    <i class="fe-clock font-22 avatar-title text-primary"></i>
                </div>
                <h5 class="font-16 mt-3"> {% trans %}error_page.503.descriptions.center.title{% endtrans %} </h5>
                <p class="text-muted"> {% trans %}error_page.503.descriptions.center.text{% endtrans %} </p>
            </div>
        </div> <!-- end col-->
        <div class="col-md-4">
            <div class="text-center mt-3 px-1">
                <div class="avatar-md rounded-circle bg-soft-primary mx-auto">
                    <i class="fe-help-circle font-22 avatar-title text-primary"></i>
                </div>
                <h5 class="font-16 mt-3"> {% trans %}error_page.503.descriptions.right.title{% endtrans %} </h5>
                <p class="text-muted"> {% trans %}error_page.503.descriptions.right.text{% endtrans %} <a href=\"mailto:#\">support@adoxa.ru</a> </p>
            </div>
        </div> <!-- end col-->
    </div> <!-- end row-->
</div> <!-- end /.text-center-->
{% endblock %}
