    <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card">

            <div class="card-body p-4">
                
                <div class="text-center w-75 m-auto">
                    <div class="auth-logo">
                        <a href="index.html" class="logo logo-dark text-center">
                            <span class="logo-lg">
                                <img src="/source/base/images/adoxa_logo_dark.svg" alt="" height="22">
                            </span>
                        </a>
    
                        <a href="index.html" class="logo logo-light text-center">
                            <span class="logo-lg">
                                <img src="/source/base/images/adoxa_logo_light.svg" alt="" height="22">
                            </span>
                        </a>
                    </div>
                    <p class="text-muted mb-4 mt-3"> {{ 'login.text'|trans }} </p>
                </div>

                <form method="post">

                    {% if error %}
                        <div class="alert alert-danger">{{ 'login.error'|trans }}</div>
                    {% endif %}

                    <div class="mb-2">
                        <label for="emailaddress" class="form-label"> {{ 'login.email'|trans }} </label>
                        {# <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control @error('email') is-invalid @enderror" autocomplete="email" required autofocus> #}
                        <input type="email" value="" name="email" id="inputEmail" class="form-control @error('email') is-invalid @enderror" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-2">
                        <label for="password" class="form-label"> {{ 'login.password'|trans }} </label>
                        <div class="input-group input-group-merge">
                            <input type="password" value="" name="password" id="inputPassword" class="form-control @error('password') is-invalid @enderror" autocomplete="current-password" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="remember" name="remember_me" value="1" checked>
                            <label class="form-check-label" for="remember">
                                {{ 'login.remember_me'|trans }}
                            </label>
                        </div>
                    </div>

                    <div class="d-grid mb-0 text-center">
                        <button class="btn btn-primary" type="submit"> {{ 'login.btn.login'|trans }} </button>
                    </div>

                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                </form>

                </div>

            </div> <!-- end card-body -->
        </div>
        <!-- end card -->

